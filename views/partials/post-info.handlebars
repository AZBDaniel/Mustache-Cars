<article class="post">
  <div class="columns is-centered">
    <div class="column is-three-quarters">
      <div class="box">
        <div class="Car_name title is-4">
          {{car_maker}} {{car_model}} {{car_body}}
        </div>
        <div class="meta">
          <h1 class="title is-6">
            {{user.username}}
          </h1>

        </div>
        <div class="review">
          "{{review}}"
        </div>
        <div>
          Review created on: {{created_at}}
        </div>

      </div>
      <a class="is-centered" href="/post/{{id}}"> <i class="fad fa-comment"></i> {{comments.length}}</a>
    </div>
  </div>
</article>
